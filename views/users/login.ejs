<% layout("/layouts/boilerplate") %>

<style>
    .login{
        display: flex;
        font-family: 'Roboto', sans-serif;
    }
    .p_p{
        padding: 20px 40px 20px 40px;
        margin-top:30px;
        margin-right: 35px;
        margin-bottom:50px;
    }
    .btn-login{
        background-color: #fe424d;
        color:#ffffff;
    }
    .btn-login:hover{
        background-color: #fe424d;
        color:#ffffff;
    }
</style>
    <div class="row">

        <div class="login">

          <div class="col-6 offset-1 shadow p_p" >

            <h3 class="col-6 ">Login</h3><br>

            <form action="/login" class="needs-validation" method="POST" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                   <input  name="username" id="username" type="text"  required class="form-control" />
                </div>

            
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                   <input  name="password" id="password" type="password"  required class="form-control" />
                </div>

                <button class="btn btn-login">Login</button>

            </form>

            </div>

            <div>
                <img src="https://png.pngtree.com/png-vector/20200610/ourlarge/pngtree-search-real-estate-or-home-flat-design-png-image_2222177.jpg" alt="img" height="350px" width="350px"/>
            </div>

            </div>

    </div>

    